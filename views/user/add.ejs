      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <%- include('../Components/navbar.ejs') %>

        <div class="container mt-5">
            <h2 class="mb-4">Add New Customer</h2>
            <form class="mx-0 row gx-3 gy-4 mt-3" action="/user/add.html" method="post">
              <div class="col-md-6">
                <label for="inputfirstName4" class="form-label">First Name:</label>
                <input name="firstname" placeholder="Ali..." type="text" class="form-control" id="inputfirstName4" required />
              </div>
              <div class="col-md-6">
                <label for="inputlastName4" class="form-label">Last Name:</label>
                <input name="lastname" placeholder="Hassan..." type="text" class="form-control" id="inputlastName4" required />
              </div>
    
              <div class="col-md-6">
                <label for="inputemail4" class="form-label">Email:</label>
                <input name="email" placeholder="ali@gmail.com" type="email" class="form-control" id="inputemail4" required />
              </div>
              <div class="col-md-6">
                <label for="inputtele4" class="form-label">Telephone:</label>
                <input name="phonenumber" placeholder="05XXXXXXXX" type="number" class="form-control" id="inputtele4" required />
              </div>
    
              <div class="col-md-6">
                <label for="inputage4" class="form-label">Age:</label>
                <input name="age" placeholder="Age" type="number" class="form-control" id="inputage4" />
              </div>
    
              <div class="col-md-6">
                <label for="inputCountry" class="form-label">Country:</label>
                <select name="country" id="inputCountry" class="form-select" required>
                  <option selected hidden disabled>Choose here ...</option>
                  <% const country_list = ["Saudi Arabia","Egypt","United Arab Emirates","Jordan","Algeria"]; %>
                  <% for(const country of country_list) { %>
                    <option><%= country %></option>
                  <% } %>
                </select>
              </div>
    
              <div class="col-md-6">
                <label for="inputGender" class="form-label">Gender:</label>
                <select name="gender" id="inputGender" class="form-select" required>
                  <option selected hidden disabled>Choose here ...</option>
                  <option>Male</option>
                  <option>Female</option>
                </select>
              </div>
    
              <div class="col-12 mt-4">
                <button type="submit" class="btn btn-primary px-4">Save Customer</button>
              </div>
            </form>
        </div>
      </section>
